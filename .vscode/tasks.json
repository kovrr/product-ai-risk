{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start React Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE.*preparing",
          "endsPattern": "(Local|Network):.*http://.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "dev-servers"
      }
    },
    {
      "label": "Stop React Dev Server",
      "type": "shell",
      "command": "echo 'Stopping React Dev Server...' && pkill -f 'vite'",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Install Backend Dependencies",
      "type": "shell",
      "command": "pip",
      "args": ["install", "-r", "requirements.txt"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Django: Run Migrations",
      "type": "shell",
      "command": "python3.9",
      "args": ["manage.py", "migrate"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Django: Create Superuser",
      "type": "shell",
      "command": "python3.9",
      "args": ["manage.py", "createsuperuser"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Database: Import Schema",
      "type": "shell",
      "command": "psql",
      "args": ["-U", "liransorani", "-d", "postgres", "-f", "aikovrr_schema.sql"],
      "options": {
        "cwd": "${workspaceFolder}/database"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Database: Import Data",
      "type": "shell",
      "command": "psql",
      "args": ["-U", "liransorani", "-d", "aikovrr", "-f", "aikovrr_data.sql"],
      "options": {
        "cwd": "${workspaceFolder}/database"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
