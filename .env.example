# AIKovrr Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Django Settings
# =============================================================================

# Secret key for cryptographic signing (REQUIRED in production)
# Generate a new one: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-rk$n-h@t(s#ib)14bkex1@o+^an-bddl9)nwjv21lf9f$2qury

# Debug mode (True/False) - MUST be False in production
DEBUG=True

# Comma-separated list of allowed hosts (* allows all - only for development)
ALLOWED_HOSTS=*

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL database name
DB_NAME=aikovrr

# PostgreSQL user
# Default: postgres (standard PostgreSQL superuser)
# For macOS with Homebrew: use your system username or 'postgres'
# For Docker: postgres
DB_USER=postgres

# PostgreSQL password (leave empty for local dev without password)
DB_PASSWORD=

# PostgreSQL host
# Local development: localhost
# Docker: db (service name from docker-compose.yml)
DB_HOST=localhost

# PostgreSQL port (default: 5432)
DB_PORT=5432

# =============================================================================
# Frontend Configuration
# =============================================================================

# API base URL for frontend
# Development: http://localhost:8000
# Docker: http://backend:8000
# Production: https://your-domain.com
VITE_API_URL=http://localhost:8000/api

# =============================================================================
# CORS Settings (Development Only)
# =============================================================================

# Allow all origins (True/False) - only for development
CORS_ALLOW_ALL_ORIGINS=True

# =============================================================================
# Notes
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Update .gitignore to include .env
# 3. For production, generate a new SECRET_KEY
# 4. For production, set DEBUG=False
# 5. For production, specify exact ALLOWED_HOSTS
# 6. For Docker, update DB_HOST to match your service name (usually 'db')
